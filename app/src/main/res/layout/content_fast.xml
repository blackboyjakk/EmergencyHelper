<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    tools:context="kmitl.ce.project.purmpon.emergencyapp.FastActivity"
    android:orientation="vertical"
    android:background="@drawable/images"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_fast">

    <FrameLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.60">

        <FrameLayout
            android:id="@+id/videoview"
            android:layout_width="1dp"
            android:layout_height="1dp"/>

        <ImageView
            android:layout_width="269dp"
            android:layout_height="269dp"
            android:src="@drawable/logo"
            android:id="@+id/imageView"
            android:layout_gravity="center" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:layout_gravity="center_horizontal|bottom"
            android:src="@drawable/text" />

    </FrameLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:weightSum="3">

        <Button
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="@string/bt_call"
            android:textStyle="bold"
            android:id="@+id/bt_call"
            android:background="@drawable/ic_phone"
            android:textColor="@color/white"
            android:scaleType="fitXY"
            android:padding="5dp"
            android:layout_weight="1"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="@string/bt_message"
            android:textStyle="bold"
            android:id="@+id/bt_message"
            android:background="@drawable/ic_message"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:padding="5dp"
            android:scaleType="fitXY" />

        <Button
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="@string/bt_mail"
            android:textStyle="bold"
            android:id="@+id/bt_mail"
            android:background="@drawable/ic_mail"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:padding="5dp"
            android:scaleType="fitXY" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:weightSum="3">

        <ToggleButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Sound Recoder"
            android:textStyle="bold"
            android:id="@+id/bt_sound"
            android:background="@drawable/ic_sound"
            android:textColor="@color/white"
            android:scaleType="fitXY"
            android:layout_weight="1"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:text= "Photo capture"
            android:id="@+id/bt_photo"
            android:background="@drawable/ic_camera"
            android:textColor="@color/white"
            android:layout_weight="1" />

        <ToggleButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Video recorder"
            android:textStyle="bold"
            android:id="@+id/bt_video"
            android:background="@drawable/ic_video"
            android:textColor="@color/white"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>
